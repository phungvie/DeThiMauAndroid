<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_contect_id"
        android:text="id"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_contect_name"
        android:text="name"
        android:layout_toRightOf="@+id/tv_contect_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_contect_number"
        android:layout_toRightOf="@+id/tv_contect_id"
        android:layout_alignBottom="@+id/tv_contect_id"
        android:text="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>